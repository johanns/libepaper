#!/usr/bin/env bash
#
# E-Paper Library Code Formatting Script
#
# Formats all C++ source files using clang-format according to project style.
#
# Usage:
#   ./bin/format              # Format all files
#   ./bin/format src/drivers  # Format specific directory
#   ./bin/format --tidy       # Run clang-tidy and apply fixes
#   ./bin/format --check      # Check formatting without modifying
#   ./bin/format --dry-run    # Show what would be formatted
#
# What it does:
#   - Finds all .cpp, .hpp, .h, .cc, .cxx files in target directory (default: project root)
#   - Excludes build/, .git/, third_party/ directories
#   - Applies .clang-format style configuration
#   - Runs clang-tidy if --tidy is specified (requires compile_commands.json)
#
# Options:
#   --check    Check if files need formatting (exit 1 if any do)
#   --tidy     Run clang-tidy analysis (applies fixes unless --check is used)
#   --dry-run  Show which files would be processed
#
# Examples:
#   ./bin/format                    # Format everything
#   ./bin/format --tidy             # Fix static analysis issues
#   ./bin/format --check            # Check in CI
#
# Requirements:
#   - clang-format
#   - clang-tidy (if --tidy used)
#   - build/compile_commands.json (if --tidy used)
#
# Documentation: README.md#contributing

set -euo pipefail

# Colors for output
readonly RED='\033[0;31m'
readonly GREEN='\033[0;32m'
readonly YELLOW='\033[1;33m'
readonly NC='\033[0m' # No Color

# Default values
CHECK_MODE=false
DRY_RUN=false
TIDY_MODE=false
BASE_DIR="$(cd "$(dirname "$0")/.." && pwd)"
TARGET_DIR="${BASE_DIR}"

# Parse arguments
while [[ $# -gt 0 ]]; do
    case $1 in
        --check)
            CHECK_MODE=true
            shift
            ;;
        --dry-run)
            DRY_RUN=true
            shift
            ;;
        --tidy)
            TIDY_MODE=true
            shift
            ;;
        -*)
            echo "Unknown option: $1"
            echo "Usage: $0 [--check] [--dry-run] [--tidy] [directory]"
            exit 1
            ;;
        *)
            TARGET_DIR="$1"
            shift
            ;;
    esac
done

if [[ ! -e "${TARGET_DIR}" ]]; then
    echo -e "${RED}Error: Target directory/file not found: ${TARGET_DIR}${NC}" >&2
    exit 1
fi

# Check dependencies
if ! command -v clang-format &> /dev/null; then
    echo -e "${RED}Error: clang-format is not installed or not in PATH${NC}" >&2
    exit 1
fi

if [[ "${TIDY_MODE}" == true ]]; then
    if ! command -v clang-tidy &> /dev/null; then
        echo -e "${RED}Error: clang-tidy is not installed or not in PATH${NC}" >&2
        exit 1
    fi

    # Check for compilation database
    if [[ ! -f "${BASE_DIR}/build/compile_commands.json" ]]; then
        echo -e "${RED}Error: build/compile_commands.json not found.${NC}"
        echo -e "${YELLOW}clang-tidy requires a compilation database.${NC}"
        echo -e "${YELLOW}Please run './bin/build' (which sets -DCMAKE_EXPORT_COMPILE_COMMANDS=ON) first.${NC}"
        exit 1
    fi
fi

# Check if .clang-format exists in the project root
if [[ ! -f "${BASE_DIR}/.clang-format" ]]; then
    echo -e "${RED}Error: .clang-format not found in project root (${BASE_DIR})${NC}" >&2
    exit 1
fi

# Find all C++ files, excluding build directories and third-party code
find_cpp_files() {
    find "${TARGET_DIR}" \
        -type f \
        \( \
            -name "*.cpp" \
            -o -name "*.hpp" \
            -o -name "*.h" \
            -o -name "*.cc" \
            -o -name "*.cxx" \
        \) \
        ! -path "*/build/*" \
        ! -path "*/.git/*" \
        ! -path "*/CMakeFiles/*" \
        ! -path "*/third_party/*" \
        | sort
}

# Run clang-tidy on a single file
tidy_file() {
    local file="$1"
    local relative_path="${file#$BASE_DIR/}"

    if [[ "${DRY_RUN}" == true ]]; then
        echo -e "${YELLOW}Would tidy: ${relative_path} (and included headers)${NC}"
        return 0
    fi

    echo -e "Analyzing ${relative_path}..."

    # Construct arguments
    # -p: Point to compile_commands.json
    # --header-filter: Analyze project headers included by this source file
    local args=(-p "${BASE_DIR}/build" --quiet --header-filter="^${BASE_DIR}/(?!third_party/).*")

    if [[ "${CHECK_MODE}" == false ]]; then
        args+=(--fix-errors)
    fi

    # Run tidy.
    clang-tidy "${args[@]}" "${file}"

    # clang-tidy checks are informative; we return success to continue processing
    return 0
}

# Format a single file
format_file() {
    local file="$1"
    local relative_path="${file#$BASE_DIR/}"

    if [[ "${CHECK_MODE}" == true ]]; then
        if ! clang-format --style=file --dry-run --Werror "${file}" &> /dev/null; then
            echo -e "${YELLOW}Needs formatting: ${relative_path}${NC}"
            return 1
        fi
        return 0
    elif [[ "${DRY_RUN}" == true ]]; then
        echo -e "${YELLOW}Would format: ${relative_path}${NC}"
        return 0
    else
        clang-format --style=file -i "${file}"
        echo -e "${GREEN}Formatted: ${relative_path}${NC}"
        return 0
    fi
}

# Main execution
main() {
    local file_count=0
    local formatted_count=0
    local needs_formatting=0
    local file

    if [[ "${TIDY_MODE}" == true ]]; then
        echo -e "${GREEN}Running clang-tidy analysis...${NC}"
        echo -e "${YELLOW}Note: Running on source files only; headers are checked via inclusion.${NC}"
    else
        echo -e "${GREEN}Running clang-format...${NC}"
    fi
    echo ""

    while IFS= read -r file || [[ -n "${file}" ]]; do
        if [[ -z "${file}" ]]; then
            continue
        fi

        file_count=$((file_count + 1))

        if [[ "${TIDY_MODE}" == true ]]; then
            tidy_file "${file}"
            formatted_count=$((formatted_count + 1))
        else
            if format_file "${file}"; then
                formatted_count=$((formatted_count + 1))
            else
                needs_formatting=$((needs_formatting + 1))
            fi
        fi
    done < <(find_cpp_files)

    if [[ ${file_count} -eq 0 ]]; then
        echo -e "${YELLOW}No C++ files found${NC}"
        return 0
    fi

    echo ""
    echo -e "${GREEN}Summary:${NC}"
    echo "  Total files processed: ${file_count}"

    if [[ "${TIDY_MODE}" == false && "${CHECK_MODE}" == true ]]; then
        echo "  Files needing formatting: ${needs_formatting}"
        echo "  Files already formatted: ${formatted_count}"
        if [[ ${needs_formatting} -gt 0 ]]; then
            exit 1
        fi
    fi
}

main "$@"
