#!/usr/bin/env bash

# Script to format all C++ files in the directory structure using clang-format
# Usage: ./format_cpp.sh [--check] [--dry-run]

set -euo pipefail

# Colors for output
readonly RED='\033[0;31m'
readonly GREEN='\033[0;32m'
readonly YELLOW='\033[1;33m'
readonly NC='\033[0m' # No Color

# Default values
CHECK_MODE=false
DRY_RUN=false
BASE_DIR="$(cd "$(dirname "$0")/.." && pwd)"

# Parse arguments
while [[ $# -gt 0 ]]; do
    case $1 in
        --check)
            CHECK_MODE=true
            shift
            ;;
        --dry-run)
            DRY_RUN=true
            shift
            ;;
        *)
            echo "Unknown option: $1"
            echo "Usage: $0 [--check] [--dry-run]"
            exit 1
            ;;
    esac
done

# Check if clang-format is available
if ! command -v clang-format &> /dev/null; then
    echo -e "${RED}Error: clang-format is not installed or not in PATH${NC}" >&2
    exit 1
fi

# Check if .clang-format exists in the project root
if [[ ! -f "${BASE_DIR}/.clang-format" ]]; then
    echo -e "${RED}Error: .clang-format not found in project root (${BASE_DIR})${NC}" >&2
    exit 1
fi

# Find all C++ files, excluding build directories and third-party code
find_cpp_files() {
    find "${BASE_DIR}" \
        -type f \
        \( \
            -name "*.cpp" \
            -o -name "*.hpp" \
            -o -name "*.h" \
            -o -name "*.cc" \
            -o -name "*.cxx" \
        \) \
        ! -path "*/build/*" \
        ! -path "*/.git/*" \
        ! -path "*/CMakeFiles/*" \
        ! -path "*/third_party/*" \
        | sort
}

# Format a single file
format_file() {
    local file="$1"

    if [[ "${CHECK_MODE}" == true ]]; then
        if ! clang-format --style=file --dry-run --Werror "${file}" &> /dev/null; then
            echo -e "${YELLOW}Needs formatting: ${file}${NC}"
            return 1
        fi
        return 0
    elif [[ "${DRY_RUN}" == true ]]; then
        echo -e "${YELLOW}Would format: ${file}${NC}"
        return 0
    else
        clang-format --style=file -i "${file}"
        echo -e "${GREEN}Formatted: ${file}${NC}"
        return 0
    fi
}

# Main execution
main() {
    local file_count=0
    local formatted_count=0
    local needs_formatting=0
    local file

    echo -e "${GREEN}Found C++ files to process...${NC}"
    echo ""

    while IFS= read -r file || [[ -n "${file}" ]]; do
        if [[ -z "${file}" ]]; then
            continue
        fi

        file_count=$((file_count + 1))

        if format_file "${file}"; then
            formatted_count=$((formatted_count + 1))
        else
            needs_formatting=$((needs_formatting + 1))
        fi
    done < <(find_cpp_files)

    if [[ ${file_count} -eq 0 ]]; then
        echo -e "${YELLOW}No C++ files found${NC}"
        return 0
    fi

    echo ""
    echo -e "${GREEN}Summary:${NC}"
    echo "  Total files: ${file_count}"

    if [[ "${CHECK_MODE}" == true ]]; then
        echo "  Files needing formatting: ${needs_formatting}"
        echo "  Files already formatted: ${formatted_count}"
        if [[ ${needs_formatting} -gt 0 ]]; then
            exit 1
        fi
    elif [[ "${DRY_RUN}" == true ]]; then
        echo "  Files that would be formatted: ${file_count}"
    else
        echo "  Files formatted: ${formatted_count}"
    fi
}

main "$@"

